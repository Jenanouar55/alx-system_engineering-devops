#!/bin/bash

# Update package lists
sudo apt-get update

# Install Nginx if it's not already installed
sudo apt-get install -y nginx

# Backup the default Nginx configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Write the new Nginx configuration with the redirection rule
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # Set the server name
    server_name _;

    # Define the location for the redirection
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Other default configuration settings
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
# Use 'service' instead of 'systemctl' if systemd is not available
sudo service nginx restart

# Verify that the redirection works
curl -sI http://localhost/redirect_me | grep Location
